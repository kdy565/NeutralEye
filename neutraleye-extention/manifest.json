{
    "manifest_version": 3,
    "name": "뉴스 가치 중립성 평가",
    "version": "1.0",
    "description": "현재 보고 있는 뉴스의 가치 중립성을 평가합니다.",
    "permissions": ["tabs", "activeTab", "storage"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "assets/icon16.png",
        "48": "assets/icon48.png",
        "128": "assets/icon128.png"
      }
    },
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
  }
  